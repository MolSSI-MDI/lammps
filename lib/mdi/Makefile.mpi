SHELL = /bin/sh

# which file will be copied to Makefile.lammps

EXTRAMAKE = Makefile.lammps.empty

# ------ MAKE PROCEDURE ------

lib: 	$(OBJ)
	mkdir -p build
	cd build; cmake -Dlibtype=STATIC -Dlanguage=CXX -D CMAKE_C_COMPILER=mpicc -D CMAKE_CXX_COMPILER=mpicxx ..; make
	cp build/MDI_Library/libmdi.a .
	cp MDI_Library/mdi.h .
	@cp $(EXTRAMAKE) Makefile.lammps

# ------ CLEAN ------

clean:
	-rm *.o *.h $(LIB)
	-rm -r build
